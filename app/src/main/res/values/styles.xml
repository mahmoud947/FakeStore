<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/gold</item>
        <item name="android:numStars">6</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">1</item>
        <item name="android:padding">0dp</item>

    </style>

    <style name="customRatingBarShimmer" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/dark_gray</item>
        <item name="android:numStars">6</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:padding">0dp</item>

    </style>

    <style name="customMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">40dp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_18sdp</item>
    </style>
</resources>